@model Wondertree.Models.Status

<div>
    <h4>Status</h4>
    <hr />
    <div id="imageCarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @{
                var i = 0;
                foreach (var p in Model.Pictures)
                {
                    var itemClass = i++ == 0 ? "item active" : "item";
                    <div class="@itemClass">
                        <img class="img-thumbnail w-100" src="@p">
                    </div>
                }
            }
            @*<div class="item">
                <img class="d-block w-100" src="http://www.fujifilm.com/products/digital_cameras/x/fujifilm_x100f/sample_images/img/index/pic_02.jpg" alt="Second slide">
            </div>
            <div class="item">
                <img class="d-block w-100" src="http://www.fujifilm.com/products/digital_cameras/x/fujifilm_x100f/sample_images/img/index/pic_01.jpg" alt="Third slide">
            </div>*@
        </div>
    </div>
</div>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<div id="status" height="150"></div>


<script type="text/javascript">
    google.charts.load('current', { packages: ['corechart', 'bar'] });
    google.charts.setOnLoadCallback(drawMaterial);

    function drawMaterial() {
        var values = ['@Html.DisplayNameFor(m => m.Value1)', '@Html.DisplayNameFor(m => m.Value2)', '@Html.DisplayNameFor(m => m.Value3)', '@Html.DisplayNameFor(m => m.Value4)']
        var info = [@Model.Value1, @Model.Value2, @Model.Value3, @Model.Value4]

        var data = new google.visualization.DataTable();
        data.addColumn('string', 'Key');
        data.addColumn('number', 'Value');

        for (i = 0; i < values.length; i++)
            data.addRow([values[i], info[i]]);

        var materialOptions = {
            title: 'Status',
            hAxis: {
                title: 'Key'
            },
            vAxis: {
                title: 'Value'
            },
            bar: { groupWidth: "25%" },
            height: 300
        };
        var materialChart = new google.visualization.BarChart(document.getElementById('status'));
        materialChart.draw(data, materialOptions);
    }
</script>

<style type="text/css">
    #imageCarousel .carousel-inner {
        width: 50%;
        margin-left: auto;
        margin-right: auto;
    }

    #imageCarousel img{
        max-height: 200px;
        width: auto;
        height: auto;
    }
</style>